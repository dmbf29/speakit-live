<div class="lesson-wrapper">
  <div class="row">
    <div class="col-xs-12">
      <div class="new_lesson">
        <div class="info">
          <div class="info-label"><strong>New Course</strong></div>
        </div>
        <div style="width: 100%;">
        <%= simple_form_for([@course], wrapper: :inline_form, html: { class: 'new-lesson-form form-inline' }) do |f| %>
        <div>
          <p>School</p>
          <%= f.input_field :school %>
        </div>
        <div>
          <p>Course name</p>
          <%= f.input_field :name %>
        </div>
        <div>
          <p>Course description</p>
          <%= f.input_field :description %>
        </div>
        <div>
          <%= f.submit class: "btn-primary" %>
        </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
