<div class="container">
  <h1 style="text-align: center;"> Lessons </h1>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Lesson</th>
            <th scope="col">Date</th>
            <th scope="col">Learning Goal</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each_with_index do | l, i | %>
          <tr>
            <th scope="row"><%= i += 1 %></th>
            <td><%= l.start_time.strftime('%D') %></td>
            <td><%= l.learning_goal %></td>
            <% if l.completed == true %>
            <td style="color:#03C651; text-align: left;">Complete</td>
            <% elsif l.completed == false %>
            <td style="color:#F2994A; text-align: left;">In Progress</td>
            <% end %>
            <% if student_signed_in? && l.completed == false%>
            <%= simple_form_for [l, Attendance.new] do |f| %>
            <td><%= f.submit "Join lesson", class: "btn-2" %></td>
            <% end %>
            <% elsif current_teacher && l.completed == false %>
            <td><%= link_to "Continue", lesson_path(l) %></td>
            <% else %>
            <td></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>