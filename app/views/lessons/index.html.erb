<div class="container">
  <h1> Lessons </h1>
  <div class="row schedule">

    <div class="col-sm-2">
      <h4>Lesson No.</h4>
    </div>
    <div class="col-sm-2">
      <h4>Date</h4>
    </div>
    <div class="col-sm-4">
      <h4>Learning Goal</h4>
    </div>
    <div class="col-sm-2">
      <h4>Status</h4>
    </div>

  </div>
    <% @lessons.each_with_index do | l, i | %>
    <div class="row schedule_details">
      <div class="col-sm-2">
        <%= i + 1%>
      </div>
      <div class="col-sm-2">
        <%= l.start_time.strftime('%D') %>
      </div>
      <div class="col-sm-4">
        <%= l.learning_goal %>
      </div>
      <div class="col-sm-2">
        <% if l.completed == true %>
          <p style="color:#03C651">Complete</p>
        <% elsif l.completed == false %>
          <p style="color:#F2994A">In Progress</p>
        <% end %>
      </div>
      <div class="col-sm-2">
        <% if student_signed_in? && l.completed == false%>
          <%= link_to "Join lesson", lesson_attendances_path(l.id), method: :post %>
        <% elsif current_teacher && l.completed == false %>
          <%= link_to "Continue", lesson_path(l.id) %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if teacher_signed_in? %>
  <div class="row">
    <%= link_to "Create Lesson", new_lesson_path, class: "btn btn-primary" %>
  </div>
  <% end %>


</div>




