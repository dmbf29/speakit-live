<div class="container">
  <h1> Lessons Index </h1>
  <div class="row">
    <div class="col-sm-2">
      Lesson Number
    </div>
    <div class="col-sm-2">
      Date
    </div>
    <div class="col-sm-4">
      Learning Goal
    </div>
    <div class="col-sm-2">
      Complete?
    </div>
  </div>
    <% @lessons.each_with_index do | l, i | %>
    <div class="row">
      <div class="col-sm-2">
        <%= i %>
      </div>
      <div class="col-sm-2">
        <%= l.start_time.strftime('%A, %b %d') %>
      </div>
      <div class="col-sm-4">
        <%= l.learning_goal %>
      </div>
      <div class="col-sm-2">
        <%= l.completed %>
      </div>
      <div class="col-sm-2">
        <% if student_signed_in? && l.completed == false%>
          <%= link_to "Join lesson", lesson_attendances_path(l.id), method: :post %>
        <% elsif current_teacher && l.completed == false %>
          <%= link_to "Continue lesson", lesson_path(l.id) %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if teacher_signed_in? %>
  <div class="row">
    <%= link_to "Create Lesson", new_lesson_path, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
