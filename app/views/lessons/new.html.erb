<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
    <h1>Create a New Lesson</h1>
      <%= simple_form_for @lesson do |f| %>
        <%= f.input :learning_goal %>
        <%= f.input :time_goal %>
        <%= f.input :start_time %>
        <%= f.button :submit, class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
