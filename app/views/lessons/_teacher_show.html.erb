<div class="container">
  <div class="table-wrapper">
    <div class="teacher-wrapper">
      <div class="row">
        <div class="col-xs-2">
          <%= image_tag current_teacher.photo_url, class: "avatar", alt: "avatar" %>
        </div>
        <div class="col-xs-4 name">
          <h3><%= current_teacher.first_name %> <%= current_teacher.last_name %></h3>
        </div>
        <div class="col-xs-4">
        </div>
        <div class="col-xs-2">
        </div>
      </div>
    </div>
    <div class="lesson-wrapper course-wrapper">
      <div class="row">
        <div class="col-xs-5">
          <div class="info">
            <div class="info-label">Course</div>
            <p><%= @course.name %></p>
          </div>
        </div>
        <div class="col-xs-4">
          <div class="info">
            <div class="info-label">School</div>
            <p><%= @course.school %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="lesson-wrapper">
      <div class="row">
        <div class="col-xs-5">
          <div class="info">
            <div class="info-label">Lesson Date</div>
            <p><%= @lesson.start_time.strftime('%A, %b %d, %Y') %></p>
          </div>
          <div class="info">
            <div class="info-label">Lesson Goal</div>
            <p><%= @lesson.learning_goal %> for <%= @lesson.time_goal %> seconds</p>
          </div>
        </div>
        <div class="col-xs-4">
          <div class="info">
            <div class="info-label">Lesson number</div>
            <p><%= @course.lessons.count %></p>
          </div>
          <div class="info">
            <div class="info-label">Students Present</div>
            <%= @attendances.count %> <%= image_tag 'student_icon.png', class: "small-icon" %>
          </div>
        </div>
        <%= button_to "Start lesson", lesson_time_trials_path(@lesson), method: :post, class: "btn-primary" %>
      </div>
    </div>
    <div class="row no-margin">
      <div class="col-sm-12">
        <div class="row">
          <div class="lesson-attendance-row">
            <div class="lesson-attendance-row-item lesson-attendance-row-avatar">
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-number">
              <h5>Student Num</h5>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-name">
              <div class="lesson-attendance-row-item lesson-attendance-row-first-name">
                <h5>First</h5>
              </div>
              <div class="lesson-attendance-row-item lesson-attendance-row-last-name">
                <h5>Last</h5>
              </div>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-actions">
              <h5>Conversations</h5>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-check">
              <h5>HW Checked</h5>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-remove">
              <h5>Absent?</h5>
            </div>
          </div>
          <% @attendances.joins(:student).order('students.last_name ASC').each_with_index do | attendance, index | %>
          <%# Only display students who have presence marked as true %>
            <% if attendance.present == true %>
              <div class="lesson-attendance-row <%= 'even' if index.even? %>">
                <div class="lesson-attendance-row-item lesson-attendance-row-avatar">
                  <% index += 1 %>
                  <%= image_tag attendance.student.photo_url, class: "avatar", alt: "avatar" %>
                </div>
                <div class="lesson-attendance-row-item lesson-attendance-row-number">
                  <%= attendance.student.student_number %>
                </div>
                <div class="lesson-attendance-row-item lesson-attendance-row-name">
                  <div class="lesson-attendance-row-item lesson-attendance-row-first-name">
                    <%= attendance.student.first_name %>
                  </div>
                  <div class="lesson-attendance-row-item lesson-attendance-row-last-name">
                    <%= attendance.student.last_name %>
                  </div>
                </div>
                <div class="lesson-attendance-row-item lesson-attendance-row-actions">
                  <%= link_to '<i class="fas fa-comment"></i>'.html_safe, lesson_student_path(@lesson, attendance.student_id) unless attendance.time_trials.empty? %>
                </div>
                <div class="lesson-attendance-row-item lesson-attendance-row-check">
                  <%= '<i class="far fa-check-square"></i>'.html_safe %>
                  <%= '<i class="fas fa-times"></i>'.html_safe.html_safe %>
                </div>
                <div class="lesson-attendance-row-item lesson-attendance-row-remove">
                  <%= link_to '<index class="fas fa-user-times"></index>'.html_safe, unattend_attendance_path(attendance[:id]), method: :post %>
                </div>
              </div>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-actions">
              <% @lesson.student_time_trials(attendance.student).each do |trial| %>
                <% if trial.completed %>
                  <%= link_to '<i class="fas fa-comment"></i>'.html_safe, lesson_student_path(@lesson, attendance.student_id) unless attendance.time_trials.empty? %>
                <% end %>
              <% end %>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-check">
              <%= '<i class="far fa-check-square"></i>'.html_safe %>
              <%= '<i class="fas fa-times"></i>'.html_safe %>
            </div>
            <div class="lesson-attendance-row-item lesson-attendance-row-remove">
              <%= link_to '<index class="fas fa-user-times"></index>'.html_safe, unattend_attendance_path(attendance[:id]), method: :post %>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>

</div>
