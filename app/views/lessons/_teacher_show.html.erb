<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @attendances.each_with_index do | a, i | %>
          <%# Only display students who have presence marked as true %>
          <% if a.present == true %>
          <tr>
            <th scope="row"><%= i += 1 %></th>
            <td><%= a.student.first_name %></td>
            <td><%= a.student.last_name %></td>
            <td>
              <%= link_to '<i class="fas fa-user-times"></i>'.html_safe, unattend_attendance_path(a[:id]), method: :post %>
            </td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-sm-4">
          <%= link_to "Start lesson", lesson_time_trials_path(@lesson), method: :post, class: "btn-primary" %>
        </div>
      </div>
    </div>
  </div>